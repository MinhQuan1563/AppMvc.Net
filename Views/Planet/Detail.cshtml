@model AppMvc.Net.Models.PlanetModel

<h1>@Model.Name</h1>

<div class="card w-25">
    <img class="card-img-top" src="~/planet/@(Model.Name).jpg" alt="" />
    <div class="card-body">
        <h4>@Model.VnName</h4>
        <div class="card-text">
            @Model.Content
        </div>

        <a class="card-link" asp-action="Index">Cac hanh tinh</a>
    </div>
</div>